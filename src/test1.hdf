# Examples of using the alias definition then using the merge function to alter
# the attributes
-   #HypervisorA:
        << : *HVDef
        Name: HypervisorA
        MemSize: 2048
        MgmtIP: 192.168.1.1
-   #HypervisorB:
        << : *HVDef
        Name: HypervisorB
        MemSize: 2048
        MgmtIP: 192.168.1.2
-   #HypervisorC: &BigServer
        << : *HVDef
        Name: HypervisorC
        MemSize: 32767
        MgmtIP: 192.168.1.3
        HVType: XenServer
        HVVendor: citrix
        HVVersion: 6.0
        NicList : [ Nic 5 special ]
-   #HypervisorD:
        << : *HVDef
        Name: HypervisorD
        MgmtIP: 192.168.1.5
